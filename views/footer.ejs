  collapseElements.forEach(element => {
    element.addEventListener('show.bs.collapse', () => {
      collapseElements.forEach(otherElement => {
        if (otherElement !== element) {
          const bsCollapse = bootstrap.Collapse.getInstance(otherElement);
          if (bsCollapse) {
            bsCollapse.hide();
          }
        }
      });
    });
  });
</script>

